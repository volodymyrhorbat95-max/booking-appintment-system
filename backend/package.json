    "prisma:migrate:status": "prisma migrate status",
    "prisma:migrate:create": "prisma migrate dev --create-only",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:seed:force": "prisma db seed",
    "prisma:push": "prisma db push",
    "prisma:pull": "prisma db pull",
    "prisma:validate": "prisma validate",
    "prisma:format": "prisma format",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "db:reset": "prisma db push --force-reset --accept-data-loss && npm run prisma:seed",
    "db:seed": "npm run prisma:seed",
    "migrate:encrypt": "ts-node src/scripts/migrate-encrypt-sensitive-data.ts",
    "migrate:hash-phones": "ts-node src/scripts/migrate-hash-whatsapp-numbers.ts"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts",
    "schema": "prisma/schema.prisma"
